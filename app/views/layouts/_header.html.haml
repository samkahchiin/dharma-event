%nav#navbar-bordered.navbar.navbar-default
  .container-fluid
    %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#main-collapse-navbar", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/") 游心法海

    #main-collapse-navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li#user-dropdown.dropdown
            = link_to "#", { "data-toggle": "dropdown", class: "dropdown-toggle", "aria-haspopup": "true", "aria-expanded": "false" } do
              = current_user.email
              %span.caret
            %ul.dropdown-menu.col-xs-12
              - if current_user.try(:admin?)
                %li#admin= link_to "Admin", admin_root_path
              %li#sign-out= link_to "Sign out", destroy_user_session_path, method: :delete
        - else
          %li
            #log-in= link_to "LOG IN", new_user_session_path
          %li
            #sign-up= link_to "SIGN UP", new_user_registration_path
        %li.create-event
          - if current_user
            .new-event= link_to "NEW EVENT", new_event_path
          - else
            .new-event= link_to "NEW EVENT", new_user_session_path
