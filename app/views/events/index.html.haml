%section
  .cover-img-container
    .cover-img=image_tag "meditate.jpg"

%h1.root-page-title.text-center Events for you

%section
  .container
    .row
      - @events.each do |event|
        .event-card.col-md-4.col-xs-12
          .card
            .card-block
              =image_tag event.image.url, class: "card-img-top"
            .card-block
              .card-subtitle= event.start_time.strftime("%a, %d %b %Y, %R %P")
              = link_to event.title, event, class: "h4 card-text event-title"
              .card-subtitle= event.location

