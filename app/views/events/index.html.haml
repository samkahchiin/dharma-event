%p#notice= notice
%h1 Events
%table
  %thead
    %tr
      %th Title
      %th Start time
      %th End time
      %th Speaker
      %th Description
      %th Contact
      %th Location
      %th Price
      %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.start_time
        %td= event.end_time
        %td= event.speaker
        %td= event.description
        %td= event.contact
        %td= event.location
        %td= event.price
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Event', new_event_path
