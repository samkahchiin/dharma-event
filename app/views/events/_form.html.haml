= form_for(event) do |f|
  - if event.errors.any?
    #error_explanation
      %h2
        = pluralize(event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - event.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control", required: true
  .form-group
    = f.label :language
    = f.select :language, Event::LANGUAGE, class: "form-control", required: true
  .form-group
    = f.label :start_time
    = f.datetime_select :start_time, class: "form-control", required: true
  .form-group
    = f.label :end_time
    = f.datetime_select :end_time, class: "form-control", required: true
  .form-group
    = f.label :speaker
    = f.text_field :speaker, class: "form-control", required: true
  .form-group
    = f.label :description
    = f.text_area :description, class: "form-control", required: true
  .form-group
    = f.label :organizer_name
    = f.text_field :organizer_name, class: "form-control", required: true
  .form-group
    = f.label :contact
    = f.text_field :contact, class: "form-control", required: true
  .form-group
    = f.label :location
    = f.text_field :location, class: "form-control", required: true
  .form-group
    = f.label :state
    = f.select :area, Event::AREA, class: "form-control", required: true
  .form-group
    = f.label :price
    = f.text_field :price, class: "form-control", required: true
  .form-group
    = f.label :event_image
    = f.file_field(:image, accept: Event::VALID_IMAGE_CONTENT_TYPE.join(", "))
  .form-group
    = f.label :register_link
    = f.text_field :register_link, class: "form-control", required: true
  .form-group
    = f.label :register_form
    = f.file_field(:register_form, accept: Event::VALID_REGISTER_FORM_CONTENT_TYPE.join(", "))
  .actions
    = f.submit "Save", class: "btn btn-default", role: "button"
